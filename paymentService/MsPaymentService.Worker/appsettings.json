{ 
  "ConnectionStrings": {
    "TicketingDb": "Host=localhost;Database=ticketing;Username=ticketing_user;Password=ticketing_password"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "PaymentApprovedQueue": {
      "QueueName": "ticket.payments.approved",
      "ExchangeName": "ticket.payments",
      "RoutingKey": "ticket.payments.approved",
      "Durable": true,
      "PrefetchCount": 10
    },
    "PaymentRejectedQueue": {
      "QueueName": "ticket.payments.rejected",
      "ExchangeName": "ticket.payments",
      "RoutingKey": "ticket.payments.rejected",
      "Durable": true,
      "PrefetchCount": 10
    }
  },
  "PaymentSettings": {
    "ReservationTtlMinutes": 5,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
